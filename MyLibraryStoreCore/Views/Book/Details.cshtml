@model Books
@{
    ViewBag.Title = "Details";
}

<h1>Details Of Book</h1>


<div class="row">
    <div class="col-md-5">
@if(Model!=null)
{
   <table class="table table-bordered table-hover">
       <tr>
           <td>Book Name</td>
           <td>@Model.BookName</td>
       </tr>
       <tr>
           <td>Author Name</td>
           <td>@Model.Author</td>
       </tr>
       <tr>
           <td>ISBN Number</td>
           <td>@Model.ISBN</td>
       </tr>
       <tr>
           <td>Published Date</td>
           <td>@Model.PublishedDate</td>
       </tr>
       <tr>
           <td>Gener</td>
           <td>@Model.Gener</td>
       </tr>
   </table>
}
else
{
    <h2>No Books Available</h2>
}
 </div>
</div>
<div class="row">
    <div class="col-md-5">
        <a asp-action="Index" asp-controller="Book">Back To Index</a>
        <a asp-controller="Book" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Edit</a>
    </div>
    <div class="col-md-5">
        <form asp-controller="Book" asp-action="DeleteBook" asp-route-id="@Model.Id" method="post" class="btn btn-outline-danger">Delete Book</form>
    </div>
</div>

