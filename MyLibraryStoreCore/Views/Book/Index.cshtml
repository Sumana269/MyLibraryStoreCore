@model IEnumerable<Books>
@{
    ViewData["Title"] = "Books";
}

@if (Model.Count()==0)
{
    <h3>No Books</h3>
}
else
{
    <ul class="list-group">
        @foreach(var book in Model)
        {
            <li class="list-group-item">
                <a asp-action="Details" asp-controller="Book" asp-route-id="@book.Id">@book.BookName</a>
            </li>
        }
    </ul>
}

